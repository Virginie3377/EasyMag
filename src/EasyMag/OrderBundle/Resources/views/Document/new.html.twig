<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h3 class="modal-title">Ajouter un document</h3>
            </div>

            <div class="ibox-content">
                {{ form_start(form_document, {'attr': {'class': 'form-horizontal','action': path('document_new') }}) }}

                <div class="form-group">
                    {{ form_label(form_document.command_id, 'document.command', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                    {{ form_errors(form_document.command_id) }}
                    <div class="col-sm-10">
                        {{ form_widget(form_document.command_id, { 'attr': {'class': 'form-control', }}) }}
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(form_document.type, 'document.type', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                    {{ form_errors(form_document.type) }}
                    <div class="col-sm-10">
                        {{ form_widget(form_document.type, { 'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(form_document.nom, 'document.nom', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                    {{ form_errors(form_document.nom) }}
                    <div class="col-sm-10">
                        {{ form_widget(form_document.nom, { 'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(form_document.createdAt, 'document.created', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                    {{ form_errors(form_document.createdAt) }}
                    <div class="col-sm-10">
                        {{ form_widget(form_document.createdAt, { 'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
                <div class="form-group">
                    <div class="bootstrap-filestyle input-group">

                        <input type="text" id="filename-box" class="form-control" disabled="" style="width: 360px; float: right;">
                        {{ form_row(form_document.fichier, {'label_attr': {'class':'col-sm-2 control-label'}, 'attr':{'class':'filestyle inputfile','style':'position: absolute; clip: rect(0px 0px 0px 0px); margin-top:5px;','tabindex':'-1'}}) }}
                        <span class="group-span-filestyle input-group-btn" tabindex="0">
                            <label for="easymag_orderbundle_document_fichier" class="btn btn-info"  style="margin-right: 15px;">
                                <span class="glyphicon fa fa-file-o"></span> Importer
                            </label>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal-footer">
    <div class="col-md-12">
        <div class="form-group pull-right">
            {{ form_widget(form_document.submit, {'attr': {'class': 'btn btn-effect-ripple btn-primary'}}) }}
            <button type="button" class="btn btn-effect-ripple btn-danger" data-dismiss="modal" style="margin-left: 20px;">Annuler</button>
        </div>
    </div>
</div>

{{ form_rest(form_document) }}
{{ form_end(form_document) }}

