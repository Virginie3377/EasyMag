{% extends '@EasyMagUser/BackOffice/Commercial/layout.html.twig' %}

{% block stylesheets %}

{% endblock %}


{% block title %}Title{% endblock %}

{% block breadcrumb %}
    <h2>Commandes</h2>
    <ol class="breadcrumb">
        <li>
            <a href="{{ path('commercial_index' ) }}">{{ "dashboard._"|trans }}</a>
        </li>
        <li class="active">
            <a href="{{ path('command_index' ) }}">Commande</a>
        </li>
        <li class="active">
            <a href="{{ path('command_index' ) }}"><strong>{{ customer.company }}</strong></a>
        </li>
    </ol>
{% endblock %}

 {% block content %}
<div class="row">
    <div class="col-sm-8">
        <div class="ibox">
            <div class="ibox-content">
                <h2>Listing Bon de Commandes</h2>
                <div class="input-group">
                    <input type="text" placeholder="Search client " class="input form-control">
                    <span class="input-group-btn">
                        <button type="button" class="btn btn btn-primary"> <i class="fa fa-search"></i>Recherche</button>
                    </span>
                </div>
                <div class="clients-list">
                    <ul class="nav nav-tabs">
                        <span class="pull-right small text-muted">Nombre de commandes : X</span>
                        <li class="active"><a data-toggle="tab" href="#tab-1"><i class="fa fa-user"></i> Commandes</a></li>
                        <li class=""><a data-toggle="tab" href="#tab-2"><i class="fa fa-briefcase"></i> Entreprises</a></li>
                    </ul>
                    <div class="tab-content">
                        <div id="tab-1" class="tab-pane active">
                            <div class="full-height-scroll">
                                <div class="table-responsive">
                                    <table class="table table-striped table-hover">
                                        <tbody>
                                        <tr>
                                            <td>Commande N° {{ command.commandnumber }}</td>
                                            <td><a data-toggle="tab" href="#{{ customer.company }}" class="client-link">{{ customer.company }}</a></td>
                                            <td> {{ customer.address }} {{ customer.postalCode }} {{ customer.city }}</td>
                                            <td>{% if command.date %}Vendu le : {{ command.date|date('d-m-Y') }}{% endif %}</td>
                                            <td class="client-status">
                                                <span class="label label-primary">{{ command.status }}</span>
                                            </td>
                                        </tr>
                                        <tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-4">
        <div class="ibox ">
            <div class="ibox-content">
                <div class="tab-content">
                    <div id="{{ customer.company }}" class="tab-pane active">
                        <div class="row">
                            <div class="col-lg-12 text-center">
                                <h2>{{ customer.company }}</h2>
                                <span class="text-center">{{ customer.gender }} {{ customer.firstname }} {{ customer.lastname }}</span>

                                <a href="mailto:{{ customer.email }}">
                                    <button type="button" class="btn btn-primary btn-sm btn-block" style="margin: 10px 0;"><i class="fa fa-envelope"></i>
                                        Envoyez un Email
                                    </button>
                                </a>
                            </div>

                            <div class="col-lg-12 text-center">
                                <strong>
                                   {{ command.product.type }}
                                </strong>
                                <div class="ibox no-padding">
                                    <img alt="image" style="margin: 10px 0;" class="img-responsive" src="{{ asset('assets/backoffice/img/cutomers/img_magazine/p8.jpg') }}">
                                </div>


                            </div>
                        </div>
                        <div class="client-detail">
                            <div class="full-height-scroll text-center">

                                <ul class="list-group clear-list">
                                    <li class="list-group-item fist-item">
                                        {% if command.date %}<strong>Vendu le </strong>{{ command.date|date('d-m-Y') }}{% endif %}
                                    </li>
                                    <li class="list-group-item">
                                        <strong>Adresse </strong><br>
                                        <span class="text-center">{{ customer.address }} <br>{{ customer.postalCode }} {{ customer.city }}</span><br>
                                        <span class="text-center">{{ customer.phone }}</span>
                                    </li>
                                    <li class="list-group-item">
                                        <strong>Secteur </strong><br>
                                        <span class="text-center">{{ customer.sector }}</span><br>
                                    </li>
                                    <li class="list-group-item">
                                        <strong>Périodicité </strong><br>
                                        <span class="text-center">{{ sector.periodicity }}</span><br>
                                    </li>
                                    <li class="list-group-item">
                                        <strong>Espace publicitaire n° {{ command.product.pubNumber }} </strong><br>
                                        <span class="text-center">{{ command.product.pubLengthSize }} * {{ command.product.pubWidthSize }}</span><br>
                                    </li>
                                    <li class="list-group-item">
                                        <strong>Prix TTC</strong><br>
                                        <span class="text-center">{{ command.product.price }} €</span><br>
                                    </li>
                                    <li class="list-group-item">
                                        <strong>Notes</strong>
                                        <p>
                                            Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod
                                            tempor incididunt ut labore et dolore magna aliqua.
                                        </p>
                                    </ul>
                                <hr/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>






                                                                    <ul>
        <li>
            <a href="{{ path('command_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('command_edit', { 'id': command.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
