{% extends '@EasyMagUser/BackOffice/Commercial/layout.html.twig' %}

{% block stylesheets %}

{% endblock %}


{% block title %}Title{% endblock %}

{% block breadcrumb %}
    <h2>Clients</h2>
    <ol class="breadcrumb">
        <li>
            <a href="{{ path('commercial_index' ) }}">{{ "dashboard._"|trans }}</a>
        </li>
        <li class="active">
            <a href="{{ path('secteur_index' ) }}"><strong>Tous mes Secteurs</strong></a>
        </li>
    </ol>
{% endblock %}

 {% block content %}
<div class="row animated">
    {% for sector in sectors %}
        <div class="col-md-4">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>{{ sector.name }}</h5>
                </div>
                <div>
                    <div class="ibox-content no-padding border-left-right">
                        <img alt="image" class="img-responsive" src="{{ asset('assets/backoffice/img/cutomers/img_magazine/11.jpg') }}">
                    </div>
                    <div class="ibox-content profile-content">
                        <h4><strong>Première publication : {% if sector.datepublication %}{{ sector.datepublication|date('d-m-Y') }}{% endif %}</strong></h4>
                        <p><i class="fa fa-map-marker"></i> {{ sector.periodicity }}</p>
                        <h5>
                            A propos de {{ sector.name }}
                        </h5>
                        <p style="text-align: justify;">
                            {{ sector.description }}
                        </p>
                        <div class="row m-t-lg">
                            <div class="col-md-4">
                                <span class="bar">5,3,9,6,5,9,7,3,5,2</span>
                                <h5><strong>3</strong> Parutions</h5>
                            </div>
                            <div class="col-md-4">
                                <span class="line">5,3,9,6,5,9,7,3,5,2</span>
                                <h5><strong>28</strong> Clients</h5>
                            </div>
                            <div class="col-md-4">
                                <span class="bar">5,3,2,-1,-3,-2,2,3,5,2</span>
                                <h5><strong>9800 €</strong> CA</h5>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <a href="{{ path('secteur_show', { 'id': sector.id }) }}">
                                    <button type="button" class="btn btn-primary btn-sm btn-block"><i class="fa fa-envelope"></i> Voir le secteur</button>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
</div>

     
{% endblock %}
