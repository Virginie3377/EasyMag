{% extends '@EasyMagUser/BackOffice/Commercial/layout.html.twig' %}

{% block stylesheets %}

{% endblock %}


{% block title %}Title{% endblock %}

{% block breadcrumb %}
    <h2>Secteur</h2>
    <ol class="breadcrumb">
        <li>
            <a href="{{ path('commercial_index' ) }}">{{ "dashboard._"|trans }}</a>
        </li>
        <li class="active">
            <a href="{{ path('client_index' ) }}"><strong>Le secteur de {{ sector.name }}</strong></a>
        </li>
    </ol>
{% endblock %}

 {% block content %}
<div class="row animated">
    <div class="col-md-4">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>{{ sector.name }}</h5>
            </div>
            <div>
                <div class="ibox-content no-padding border-left-right">
                    <img alt="image" class="img-responsive" src="{{ asset('assets/backoffice/img/cutomers/img_magazine/11.jpg') }}">
                </div>
                <div class="ibox-content profile-content">
                    <h4><strong>Première publication : {% if sector.datepublication %}{{ sector.datepublication|date('d-m-Y') }}{% endif %}</strong></h4>
                    <p><i class="fa fa-map-marker"></i> {{ sector.periodicity }}</p>
                    <h5>
                        A propos de {{ sector.name }}
                    </h5>
                    <p style="text-align: justify;">
                        {{ sector.description }}
                    </p>
                    <div class="row m-t-lg">
                        <div class="col-md-4">
                            <span class="bar">5,3,9,6,5,9,7,3,5,2</span>
                            <h5><strong>3</strong> Parutions</h5>
                        </div>
                        <div class="col-md-4">
                            <span class="line">5,3,9,6,5,9,7,3,5,2</span>
                            <h5><strong>28</strong> Clients</h5>
                        </div>
                        <div class="col-md-4">
                            <span class="bar">5,3,2,-1,-3,-2,2,3,5,2</span>
                            <h5><strong>9800 €</strong> CA</h5>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <a href="{{ path('secteur_show', { 'id': sector.id }) }}">
                                <button type="button" class="btn btn-primary btn-sm btn-block"><i class="fa fa-envelope"></i> Voir le secteur</button>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-8">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Clients sur {{ sector.name }}</h5>
            </div>
        <div class="ibox-content">
            <table class="footable table table-stripped toggle-arrow-tiny">
                <thead>
                <tr>
                    <th data-toggle="true">Société</th>
                    <th>Prénom</th>
                    <th>Nom</th>
                    <th data-toggle="true">Téléphone</th>
                    <th data-hide="all" class="hidden-xs">Email</th>
                    <th class="hidden-xs">Signé le</th>
                    <th class="hidden-xs">CA</th>
                    <th class="hidden-xs">Validé</th>
                </tr>
                </thead>
                <tbody>
                {% for customer in customers %}
                <tr>
                    <td>{{ customer.company }}</td>
                    <td>{{ customer.firstname }}</td>
                    <td>{{ customer.lastname }}</td>
                    <td>{{ customer.phone }}</td>
                    <td class="hidden-xs">{{ customer.email }}</td>
                    <td class="hidden-xs">20%</td>
                    <td class="hidden-xs"><span class="pie">0.52/1.561</span></td>
                    <td class="hidden-xs"><a href="#"><i class="fa fa-check text-navy"></i></a></td>
                </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        </div>
    </div>
</div>
{% endblock %}
{% block scripts %}
    <script>
        $(document).ready(function() {

            $('.footable').footable();

        });
    </script>
{% endblock %}