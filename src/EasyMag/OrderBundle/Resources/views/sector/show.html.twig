{% extends 'base.html.twig' %}

{% block body %}
    <h1>Sector</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ sector.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ sector.name }}</td>
            </tr>
            <tr>
                <th>Periodicity</th>
                <td>{{ sector.periodicity }}</td>
            </tr>
            <tr>
                <th>Datepublication</th>
                <td>{% if sector.datepublication %}{{ sector.datepublication|date('Y-m-d') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('secteur_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('secteur_edit', { 'id': sector.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
