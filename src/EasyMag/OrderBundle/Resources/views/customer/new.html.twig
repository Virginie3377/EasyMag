{% extends '@EasyMagUser/BackOffice/Commercial/layout.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/backoffice/css/plugins/iCheck/custom.css') }}">
{% endblock %}


{% block title %}Title{% endblock %}

{% block breadcrumb %}
    <h2>Clients</h2>
    <ol class="breadcrumb">
        <li>
            <a href="{{ path('commercial_index' ) }}">{{ "dashboard._"|trans }}</a>
        </li>
        <li class="active">
            <a href="{{ path('client_index' ) }}"><strong>Mes Clients</strong></a>
        </li>
    </ol>
{% endblock %}

 {% block content %}
    <h1>{{ "customer.create" |trans }}</h1>

<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>{{ "form.required" |trans }}</h5>
            </div>
            <div class="ibox-content">
                {{ form_start(form, {'attr': {'class': 'form-horizontal', 'action': path('client_new') }}) }}

                <div class="form-group">
                    {{ form_label(form.company, 'profile.fields.company', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                    {{ form_errors(form.company) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.company, { 'attr': {'class': 'form-control', 'placeholder':'profile.fields.company'}}) }}
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(form.address, 'profile.fields.address', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                    {{ form_errors(form.address) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.address, { 'attr': {'class': 'form-control', 'placeholder':'profile.fields.address'}}) }}
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(form.postalCode, 'profile.fields.zip_code', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                    {{ form_errors(form.postalCode) }}
                    <div class="col-sm-2">
                        {{ form_widget(form.postalCode, { 'attr': {'class': 'form-control', 'placeholder':'profile.fields.zip_code'}}) }}
                    </div>
                    {{ form_label(form.city, 'profile.fields.city', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                    {{ form_errors(form.city) }}
                    <div class="col-sm-6">
                        {{ form_widget(form.city, { 'attr': {'class': 'form-control', 'placeholder':'profile.fields.city'}}) }}
                    </div>
                </div>

                <div class="hr-line-dashed"></div>

                <div class="form-group">
                    {{ form_label(form.gender, 'profile.fields.gender', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                    {{ form_errors(form.gender) }}
                    <div class="col-sm-1">
                        {{ form_widget(form.gender, { 'attr': {'class': 'form-control'}}) }}
                    </div>

                    {{ form_label(form.firstname, 'profile.fields.firstname', {'label_attr': {'class': 'col-sm-1 control-label'}}) }}
                    {{ form_errors(form.firstname) }}
                    <div class="col-sm-3">
                        {{ form_widget(form.firstname, { 'attr': {'class': 'form-control', 'placeholder':'profile.fields.firstname'}}) }}
                    </div>

                    {{ form_label(form.lastname, 'profile.fields.lastname', {'label_attr': {'class': 'col-sm-1 control-label'}}) }}
                    {{ form_errors(form.lastname) }}
                    <div class="col-sm-4">
                        {{ form_widget(form.lastname, { 'attr': {'class': 'form-control', 'placeholder':'profile.fields.lastname'}}) }}
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(form.phone, 'profile.fields.phone', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                    {{ form_errors(form.phone) }}
                    <div class="col-sm-5">
                        {{ form_widget(form.phone, { 'attr': {'class': 'form-control', 'placeholder':'profile.fields.phone'}}) }}
                    </div>
                    {{ form_label(form.email, 'profile.fields.email', {'label_attr': {'class': 'col-sm-1 control-label'}}) }}
                    {{ form_errors(form.email) }}
                    <div class="col-sm-4">
                        {{ form_widget(form.email, { 'attr': {'class': 'form-control', 'placeholder':'profile.fields.email'}}) }}
                    </div>
                </div>

                <div class="hr-line-dashed"></div>

                <div class="form-group">
                    {{ form_label(form.customer, 'customer.new') }}
                    {{ form_errors(form.customer) }}
                    {{ form_widget(form.customer) }}
                    <input type="checkbox" class="js-switch" />
                </div>




                <div class="hr-line-dashed"></div>

                <div class="form-group">
                    {{ form_label(form.sector, 'sector._', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                    {{ form_errors(form.sector) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.sector, { 'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-3" style="float: right">
                        <a href="{{ path('client_index') }}"><button type="button" class="btn btn-white">Annuler</button></a>
                        {{ form_widget(form.submit, {'attr': {'class': 'btn btn-primary'}}) }}
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

     {{ form_rest(form) }}
     {{ form_end(form) }}

{% endblock %}

{% block javascript %}

{% endblock %}