{% extends '@EasyMagUser/BackOffice/Commercial/layout.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/backoffice/css/plugins/iCheck/custom.css') }}">
{% endblock %}


{% block title %}Client{% endblock %}

{% block breadcrumb %}
    <h2>Clients</h2>
    <ol class="breadcrumb">
        <li>
            <a href="{{ path('commercial_index' ) }}">{{ "dashboard._"|trans }}</a>
        </li>
        <li class="active">
            <a href="{{ path('client_index' ) }}"><strong>Mes Clients</strong></a>
        </li>
    </ol>
{% endblock %}

 {% block content %}
<h1>{{ "customer.edit" |trans }}</h1>

<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>{{ "form.required" |trans }}</h5>
            </div>
            <div class="ibox-content">
                {{ form_start(edit_form, {'attr': {'class': 'form-horizontal', 'action': path('client_edit', { 'id': customer.id }) }}) }}

                <div class="form-group">
                    {{ form_label(edit_form.company, 'profile.fields.company', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                    {{ form_errors(edit_form.company) }}
                    <div class="col-sm-10">
                        {{ form_widget(edit_form.company, { 'attr': {'class': 'form-control', 'placeholder':'profile.fields.company'}}) }}
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(edit_form.address, 'profile.fields.address', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                    {{ form_errors(edit_form.address) }}
                    <div class="col-sm-10">
                        {{ form_widget(edit_form.address, { 'attr': {'class': 'form-control', 'placeholder':'profile.fields.address'}}) }}
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(edit_form.postalCode, 'profile.fields.zip_code', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                    {{ form_errors(edit_form.postalCode) }}
                    <div class="col-sm-2">
                        {{ form_widget(edit_form.postalCode, { 'attr': {'class': 'form-control', 'placeholder':'profile.fields.zip_code'}}) }}
                    </div>
                    {{ form_label(edit_form.city, 'profile.fields.city', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                    {{ form_errors(edit_form.city) }}
                    <div class="col-sm-6">
                        {{ form_widget(edit_form.city, { 'attr': {'class': 'form-control', 'placeholder':'profile.fields.city'}}) }}
                    </div>
                </div>

                <div class="hr-line-dashed"></div>

                <div class="form-group">
                    {{ form_label(edit_form.gender, 'profile.fields.gender', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                    {{ form_errors(edit_form.gender) }}
                    <div class="col-sm-1">
                        {{ form_widget(edit_form.gender, { 'attr': {'class': 'form-control'}}) }}
                    </div>

                    {{ form_label(edit_form.firstname, 'profile.fields.firstname', {'label_attr': {'class': 'col-sm-1 control-label'}}) }}
                    {{ form_errors(edit_form.firstname) }}
                    <div class="col-sm-3">
                        {{ form_widget(edit_form.firstname, { 'attr': {'class': 'form-control', 'placeholder':'profile.fields.firstname'}}) }}
                    </div>

                    {{ form_label(edit_form.lastname, 'profile.fields.lastname', {'label_attr': {'class': 'col-sm-1 control-label'}}) }}
                    {{ form_errors(edit_form.lastname) }}
                    <div class="col-sm-4">
                        {{ form_widget(edit_form.lastname, { 'attr': {'class': 'form-control', 'placeholder':'profile.fields.lastname'}}) }}
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(edit_form.phone, 'profile.fields.phone', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                    {{ form_errors(edit_form.phone) }}
                    <div class="col-sm-5">
                        {{ form_widget(edit_form.phone, { 'attr': {'class': 'form-control', 'placeholder':'profile.fields.phone'}}) }}
                    </div>
                    {{ form_label(edit_form.email, 'profile.fields.email', {'label_attr': {'class': 'col-sm-1 control-label'}}) }}
                    {{ form_errors(edit_form.email) }}
                    <div class="col-sm-4">
                        {{ form_widget(edit_form.email, { 'attr': {'class': 'form-control', 'placeholder':'profile.fields.email'}}) }}
                    </div>
                </div>

                <div class="hr-line-dashed"></div>

                <div class="form-group">
                    {{ form_label(edit_form.customer, 'customer.new', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                    {{ form_errors(edit_form.customer) }}
                    <div class="i-checks">
                        {{ form_widget(edit_form.customer, { 'attr': { 'class': 'iradio_square-green'}}) }}
                    </div>
                </div>

                <div class="hr-line-dashed"></div>

                <div class="form-group">
                    {{ form_label(edit_form.sector, 'sector._', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                    {{ form_errors(edit_form.sector) }}
                    <div class="col-sm-10">
                        {{ form_widget(edit_form.sector, { 'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-3" style="float: right">
                        <button type="button" class="btn btn-white">Annuler</button>
                        {{ form_widget(edit_form.submit, {'attr': {'class': 'btn btn-primary'}}) }}
                    </div>
                </div>
            </div>
        </div>
    </div>


    {{ form_rest(edit_form) }}
    {{ form_end(edit_form) }}


    {% endblock %}

    {% block scripts %}
        <!-- iCheck -->
        <script src="{{ asset('assets/backoffice/js/plugins/iCheck/icheck.min.js') }}"></script>
        <script>
            $(document).ready(function () {
                $('.i-checks').iCheck({
                    checkboxClass: 'icheckbox_square-green',
                    radioClass: 'iradio_square-green'
                });
            });
        </script>


    {% endblock %}





