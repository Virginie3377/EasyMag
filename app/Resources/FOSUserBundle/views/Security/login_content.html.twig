{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}

    <div class="form-group">
        <label class="sr-only" for="username">{{ 'security.login.username'|trans }}</label>
        <input type="text" id="username" name="_username" value="{{ last_username }}" required="required"
               placeholder="{{ 'security.login.username'|trans }}..." class="r-form-1-first-name form-control"/>
    </div>

    <div class="form-group">
        <label class="sr-only" for="password">{{ 'security.login.password'|trans }}</label>
        <input type="password" id="password" name="_password" required="required" placeholder="{{ 'security.login.password'| trans }}..."
               class="r-form-1-first-name form-control"/>
    </div>

    <div class="form-group">
        <input type="checkbox" id="remember_me" name="_remember_me" value="on"/>
        <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
    </div>

    <button type="submit" id="_submit" name="_submit" class="btn">{{ 'security.login.submit'|trans }}</button>
</form>